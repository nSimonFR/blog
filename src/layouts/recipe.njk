---
layout: base.njk
mainClass: recipe-page
pageCss: recipe
---

<h1>{{ title | title }}</h1>
<div class="tags">
  {% for tag in recipeTags -%}
  <!-- <a href="{{ tag }}">#{{ tag }}</a> -->
  <a href="#">#{{ tag }}</a>
  {%- if not loop.last %}, {% endif %} {%- endfor %}
</div>

</br>

<section class="recipe-ingredients">
  <h2>Ingredients:</h2>
  <ul>
    {% for item in ingredients %}
    <li>{{ item.quantity }} {{ item.units }} {{ item.name }}</li>
    {% endfor %}
  </ul>
</section>

</br>

<section class="recipe-cookware">
  <h2>Cookware:</h2>
  <ul>
    {% for item in cookware %}
    <li>
      {{ item.name }}
    </li>
    {% endfor %}
  </ul>
</section>

</br>

<section class="recipe-instructions">
  <h2>Instructions</h2>
  <ul>
    {% for step in steps %}
    <li>
      {%- for item in step -%}
      {{ item | safe }}
      {%- endfor -%}
    </li>
    {% endfor %}
  </ul>
</section>
